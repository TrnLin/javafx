<?xml version="1.0" encoding="UTF-8"?>

<?xml-stylesheet type="text/css" href="style.css"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.lang.String?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="1040.0" prefWidth="1440.0" spacing="24.0" maxHeight="1040"
      style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1"
      fx:controller="com.example.demo.Properties.ViewComPropertiesController">
    <children>
        <ChoiceBox fx:id="viewOptions" prefWidth="150.0" styleClass="dropdown-list" value="Commercial Properties">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="All Properties" />
                    <String fx:value="Commercial Properties" />
                    <String fx:value="Residential Properties" />
                </FXCollections>
            </items>
        </ChoiceBox>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <HBox spacing="8.0">
                    <children>
                        <TextField fx:id="searchInput" maxWidth="-Infinity" prefWidth="300.0" promptText="Search address" styleClass="input" />
                        <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#searchProperties" styleClass="button-main" text="Search" />
                        <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#resetTable" styleClass="button-second" text="Cancel" visible="false" />
                    </children>
                </HBox>
            </children>
        </GridPane>
        <VBox spacing="16.0" styleClass="filter-container">
            <children>
                <VBox spacing="8.0">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="header-3" text="Status"/>
                        <HBox spacing="12.0">
                            <children>
                                <RadioButton fx:id="statusAll" mnemonicParsing="false" onAction="#filterBtnClicked"
                                             text="All"/>
                                <RadioButton fx:id="statusAvailable" mnemonicParsing="false"
                                             onAction="#filterBtnClicked" text="Available"/>
                                <RadioButton fx:id="statusRented" mnemonicParsing="false" onAction="#filterBtnClicked"
                                             text="Rented "/>
                                <RadioButton fx:id="statusUnderMaintenance" mnemonicParsing="false"
                                             onAction="#filterBtnClicked" text="Under Maintenance  "/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <HBox spacing="24.0">
                    <children>
                        <VBox>
                            <children>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="header-3"
                                      text="Business Type"/>
                                <TextField fx:id="businessTypeInput" prefWidth="300.0" promptText="Search business type"
                                           styleClass="input"/>
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="header-3"
                                      text="Square Footage"/>
                                <HBox alignment="CENTER_LEFT" spacing="8.0">
                                    <children>
                                        <TextField fx:id="squareFootageFrom" prefWidth="150.0" promptText="From"
                                                   styleClass="input"/>
                                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="-"/>
                                        <TextField fx:id="squareFootageTo" prefWidth="150.0" promptText="To"
                                                   styleClass="input"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox alignment="BOTTOM_LEFT" spacing="8.0">
                    <children>
                        <Button fx:id="filterBtn" mnemonicParsing="false" onAction="#filterBtnClicked"
                                styleClass="button-main" text="Filter"/>
                        <Button fx:id="cancelFilterBtn" mnemonicParsing="false" onAction="#cancelFilterBtnClicked"
                                styleClass="button-second" text="Cancel " visible="false"/>
                    </children>
                </HBox>
            </children>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </VBox>
        <VBox>
            <children>
                <TableView fx:id="comPropertyTable">
                    <columns>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
    </padding>
</VBox>
