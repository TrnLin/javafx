<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<FlowPane xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" prefHeight="800.0" prefWidth="1200.0"
          xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.demo.Auth.SignupController">
    <children>
        <GridPane hgap="10.0" styleClass="form-container" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="0.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <VBox fillWidth="false" scaleShape="false">
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="header-1" text="Sign Up">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Text>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="normal-text"
                      text="Fill in the form to create an account">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Text>
            </VBox>
            <VBox GridPane.rowIndex="1">
                <Label prefHeight="17.0" prefWidth="300.0" styleClass="label-text" text="Email"/>
                <TextField fx:id="registEmailTextField" maxWidth="300.0" prefHeight="25.0" promptText="Enter your email"
                           styleClass="input" GridPane.columnIndex="0"/>
                <Label fx:id="emailStatus" textFill="#ff7878" visible="false"/>
            </VBox>
            <VBox prefWidth="300.0" GridPane.rowIndex="2">
                <Label prefHeight="17.0" prefWidth="200.0" styleClass="label-text" text="Password"/>
                <StackPane>
                    <children>
                        <!-- PasswordField (for hidden password input) -->
                        <PasswordField fx:id="registPassField" depthTest="ENABLE" maxWidth="1.7976931348623157E308"
                                       promptText="Enter your password" styleClass="input"/>

                        <!-- TextField (for showing plain text password) -->
                        <TextField fx:id="registPassTextField" depthTest="ENABLE" maxWidth="1.7976931348623157E308"
                                   promptText="Enter your password" styleClass="input" visible="false"/>
                    </children>
                </StackPane>
                <Text fx:id="status" fill="#ff7878" fontSmoothingType="LCD" smooth="false" strokeType="OUTSIDE"
                      strokeWidth="0.0" text="test" visible="false"/>
            </VBox>
            <VBox GridPane.rowIndex="3">
                <children>
                    <Label prefHeight="17.0" prefWidth="200.0" styleClass="label-text" text="Confirm Password"/>
                    <StackPane>
                        <children>
                            <PasswordField fx:id="registConfirmPassField" depthTest="ENABLE"
                                           maxWidth="1.7976931348623157E308" promptText="Enter your password"
                                           styleClass="input"/>
                            <TextField fx:id="registConfirmPassTextField" depthTest="ENABLE"
                                       maxWidth="1.7976931348623157E308" promptText="Enter your password"
                                       styleClass="input" visible="false"/>
                        </children>
                    </StackPane>
                    <Text fx:id="registStatus" fill="#ff7878" fontSmoothingType="LCD" smooth="false"
                          strokeType="OUTSIDE" strokeWidth="0.0" text="test" visible="false"/>
                    <CheckBox fx:id="showPasswordCheckBox" text="Show Password">
                        <VBox.margin>
                            <Insets top="8.0"/>
                        </VBox.margin>
                    </CheckBox>
                </children>
            </VBox>
            <FlowPane alignment="CENTER_RIGHT" prefWrapLength="0.0" GridPane.rowIndex="4">
                <children>
                    <Button fx:id="toLoginViewBtn" mnemonicParsing="false" onAction="#onLoginViewBtnClick"
                            styleClass="button-link" text="Already have an account? Login"/>
                </children>
            </FlowPane>
            <VBox fx:id="roleVBox" spacing="4.0" GridPane.rowIndex="5">
                <children>
                    <HBox alignment="BASELINE_LEFT">
                        <children>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="label-text" text="Your Role">
                                <HBox.margin>
                                    <Insets right="12.0"/>
                                </HBox.margin>
                            </Text>
                            <Text fx:id="roleStatus" fill="#ff7878" strokeType="OUTSIDE" strokeWidth="0.0" text="Text"
                                  visible="false"/>
                        </children>
                    </HBox>
                    <GridPane hgap="10.0" vgap="10.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <children>
                            <RadioButton fx:id="hostRadioButton" maxWidth="1.7976931348623157E308" text="Host"
                                         GridPane.rowIndex="1"/>
                            <RadioButton fx:id="ownerRadioButton" maxWidth="1.7976931348623157E308" text="Owner"
                                         GridPane.rowIndex="2"/>
                            <RadioButton fx:id="guestRadioButton" maxWidth="1.7976931348623157E308" text="Tenant"/>
                        </children>
                    </GridPane>
                </children>
                <GridPane.margin>
                    <Insets bottom="24.0"/>
                </GridPane.margin>
            </VBox>
            <Button fx:id="signUpBtn" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                    onAction="#onSignUpButtonClick" prefHeight="31.0" styleClass="button-main" text="Sign Up"
                    GridPane.rowIndex="6"/>

        </GridPane>
    </children>
</FlowPane>
